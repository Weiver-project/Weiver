		                        </c:if>
		                    </c:forEach>
		                </div>
		            </div>
		            <div class="swiper-slide">
		                <div class="card-container">
		                    <c:forEach var="card" items="${bestPost}" varStatus="status">
		                        <c:if test="${status.index >= 3 and status.index < 6}">
		                            <a href="${baseURL}/community/${card.id}">
		                                <div class="card">
